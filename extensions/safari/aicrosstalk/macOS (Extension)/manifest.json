{
  "manifest_version": 3,
  "name": "AI Crosstalk Bridge",
  "version": "0.1.0",
  "description": "Seamlessly exchange AI Crosstalk envelopes between Claude and ChatGPT",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "scripting",
    "commands"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "envelope-parser.js",
        "content-chatgpt.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": [
        "envelope-parser.js",
        "content-claude.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "commands": {
    "paste-envelope": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Paste envelope from clipboard and submit"
    },
    "copy-envelope": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy envelope from page to clipboard"
    }
  }
}
